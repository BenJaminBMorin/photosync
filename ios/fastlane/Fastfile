# Fastfile for PhotoSync iOS App

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    puts "ðŸ”¨ Starting build process..."

    # Sync certificates and provisioning profiles
    # In CI, use readonly mode - certificates already exist in the repo
    # This avoids needing Apple ID password for portal verification
    match(
      type: "appstore",
      readonly: true,
      verbose: true
    )

    # Build the app
    # Project is configured for manual code signing
    # Match provisioning profiles are synced before build
    # Note: Not specifying codesigning_identity to let Xcode pick the correct cert from the profile
    build_app(
      scheme: "PhotoSync",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.morinclan.photosync.app" => "match AppStore com.morinclan.photosync.app"
        },
        signingStyle: "manual",
        teamID: "DV94566H3R"
      },
      xcargs: "CODE_SIGN_STYLE=Manual",
      output_directory: "./build",
      buildlog_path: "./build/logs"
    )

    puts "âœ… Build complete, starting upload..."

    # Create API Key object from the file we set up
    key_id = ENV['APP_STORE_CONNECT_API_KEY_KEY_ID']
    issuer_id = ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID']
    key_filepath = File.expand_path("~/.appstoreconnect/private_keys/AuthKey_#{key_id}.p8")

    puts "Using API key: #{key_id}"
    puts "Key file path: #{key_filepath}"
    puts "Key file exists: #{File.exist?(key_filepath)}"

    api_key = app_store_connect_api_key(
      key_id: key_id,
      issuer_id: issuer_id,
      key_filepath: key_filepath,
      in_house: false
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      ipa: "./build/PhotoSync.ipa",
      api_key: api_key
    )

    puts "âœ… Upload complete!"

    # Clean up build artifacts
    clean_build_artifacts
  end

  desc "Download certificates and provisioning profiles"
  lane :sync_certificates do
    match(
      type: "appstore",
      readonly: true
    )
  end

  desc "Register new devices for ad-hoc builds"
  lane :add_devices do
    register_devices(devices_file: "./fastlane/devices.txt")
    match(type: "adhoc", force_for_new_devices: true)
  end
end
