# Fastfile for PhotoSync iOS App

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    puts "ðŸ”¨ Starting build process..."

    # Build the app
    build_app(
      scheme: "PhotoSync",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.morinclan.photosync.app" => "match AppStore com.morinclan.photosync.app"
        }
      },
      xcargs: "-allowProvisioningUpdates CODE_SIGN_STYLE=Manual CODE_SIGN_IDENTITY='Apple Distribution' DEVELOPMENT_TEAM=#{ENV['TEAM_ID']} PROVISIONING_PROFILE_SPECIFIER='match AppStore com.morinclan.photosync.app'",
      output_directory: "./build",
      buildlog_path: "./build/logs"
    )

    puts "âœ… Build complete, starting upload..."

    # Upload to TestFlight using API Key authentication
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      ipa: "./build/PhotoSync.ipa",
      api_key_path: "#{ENV['HOME']}/.appstoreconnect/private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_API_KEY_KEY_ID']}.p8",
      api_key: {
        key_id: ENV['APP_STORE_CONNECT_API_KEY_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
        key_filepath: "#{ENV['HOME']}/.appstoreconnect/private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_API_KEY_KEY_ID']}.p8"
      }
    )

    puts "âœ… Upload complete!"

    # Clean up build artifacts
    clean_build_artifacts
  end

  desc "Download certificates and provisioning profiles"
  lane :sync_certificates do
    match(
      type: "appstore",
      readonly: true
    )
  end

  desc "Register new devices for ad-hoc builds"
  lane :add_devices do
    register_devices(devices_file: "./fastlane/devices.txt")
    match(type: "adhoc", force_for_new_devices: true)
  end
end
